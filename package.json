{
    "name": "@eliware/mysql",
    "type": "module",
    "version": "1.1.1",
    "description": "A simple, dependency-injectable MySQL connection pool utility for Node.js, supporting both ESM and CommonJS.",
    "main": "index.cjs",
    "module": "index.mjs",
    "types": "index.d.ts",
    "files": [
        "index.mjs",
        "index.cjs",
        "index.d.ts",
        "README.md",
        "LICENSE"
    ],
    "exports": {
        ".": {
            "import": "./index.mjs",
            "require": "./index.cjs",
            "types": "./index.d.ts"
        }
    },
    "scripts": {
        "test": "npx --node-options=\"--experimental-vm-modules --no-warnings\" jest --detectOpenHandles --silent"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/eliware/mysql.git"
    },
    "keywords": [
        "mysql",
        "mysql2",
        "nodejs",
        "esm",
        "cjs",
        "dependency-injection",
        "connection-pool"
    ],
    "author": "Eli Sterling, eliware.org <eli@eliware.org>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/eliware/mysql/issues"
    },
    "homepage": "https://github.com/eliware/mysql#readme",
    "devDependencies": {
        "jest": "^30.0.4"
    },
    "jest": {
        "testEnvironment": "node",
        "testMatch": [
            "**/?(*.)+(spec|test).[jt]s?(x)",
            "**/?(*.)+(spec|test).mjs",
            "**/?(*.)+(spec|test).cjs"
        ]
    },
    "dependencies": {
        "@eliware/log": "^1.1.1",
        "mysql2": "^3.14.2"
    }
}